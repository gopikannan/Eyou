<div class="user_info">
        <a href="<%= user_path(@user) %>">
                <span class="name">
                        <%= @user.name %>
                </span>
        </a>
                <span class="user_info">
                        <%= @user.email %>
                </span>
                <span class="user_info">
                     <p>   <%= pluralize(@user.polls.count, "poll") %> </p>
                </span>

<% if @user_polls.any? %>
        <table class="polls">
                <%= render :partial => 'shared/poll_item', :collection => @user_polls %>
        </table>
<% end %>



</div>
